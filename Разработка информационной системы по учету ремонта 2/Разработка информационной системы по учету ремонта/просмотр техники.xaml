<Page x:Class="Разработка_информационной_системы_по_учету_ремонта.просмотр_техники"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Разработка_информационной_системы_по_учету_ремонта"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="просмотр_техники">
    
    <Grid>
        <DataGrid Name="Technic" HorizontalAlignment="Left" Height="224" VerticalAlignment="Top" Width="504">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding id}" Header="id"/>
                <DataGridTextColumn Binding="{Binding Name}" Header="Название"/>
                <DataGridTextColumn Binding="{Binding Code}" Header ="Код"/>
                <DataGridTextColumn Binding="{Binding amount}" Header="Количество"/>
                <DataGridTextColumn IsReadOnly="True" Binding="{Binding komuvidan}" Header="Кому выдано"/>
            </DataGrid.Columns>

        </DataGrid>       
    </Grid>
</Page>
